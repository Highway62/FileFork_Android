<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- Dialog Title Image and Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/device_dialog_title_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_devices"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/device_dialog_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Devices"
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textColor="@color/CornflowerBlue"/>

        </RelativeLayout>

    </LinearLayout>

    <!-- Device List -->
    <ListView
        android:id="@+id/device_dialog_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <!-- Contact Title Image and Text -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/device_dialog_contact_title_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_contacts"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/device_dialog_contact_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:layout_centerInParent="true"
                android:textIsSelectable="false"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/CornflowerBlue"/>

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/device_dialog_contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>